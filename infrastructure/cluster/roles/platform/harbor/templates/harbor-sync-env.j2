# Harbor Sync Environment Configuration
# Generated by Ansible - Do not edit directly

HARBOR_URL={{ harbor_url | default('http://192.168.1.210') }}
HARBOR_USER={{ harbor_admin_user | default('admin') }}
HARBOR_PASSWORD={{ harbor_admin_password }}

# Optional: Docker Hub credentials for higher rate limits
{% if docker_hub_user is defined %}
DOCKER_HUB_USER={{ docker_hub_user }}
DOCKER_HUB_TOKEN={{ docker_hub_token }}
{% endif %}

# Optional: Other registry credentials
{% if ghcr_token is defined %}
GHCR_TOKEN={{ ghcr_token }}
{% endif %}

# Sync behavior
HARBOR_SYNC_RETRY_COUNT={{ harbor_sync_retry_count | default(3) }}
HARBOR_SYNC_TIMEOUT={{ harbor_sync_timeout | default(300) }}
HARBOR_SYNC_PARALLEL={{ harbor_sync_parallel | default(4) }}